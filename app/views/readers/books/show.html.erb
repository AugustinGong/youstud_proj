<div class="row">
    <div class="col-lg-4 offset-lg-4">
        <div class="card book-card">
            <div class="header-image" style="background-image: url(<%= url_for(@book.header_image) %>)">
            </div>
            <div class="card-body">
                <h1 class="card-title"><%= @book.title %></h1>
                <p class="card-text"><%= @book.description %></p>
            </div>
        </div>
    </div>
</div>